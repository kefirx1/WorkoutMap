<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pl.dev.workoutmapcompose">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_workout_map"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_workout_map_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WorkoutMapCompose"
        android:screenOrientation="portrait"
        tools:targetApi="31">
        <activity
            android:name=".ui.screenWorkout.WorkoutActivity"
            android:screenOrientation="portrait"
            android:noHistory="true"
            android:exported="false" />
        <activity
            android:name=".ui.screenAddNewTrainingPlan.AddNewTrainingPlanActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".ui.screenTrainingPlans.TrainingPlansActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".ui.screenWeightHistory.WeightHistoryActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".ui.screenSettings.SettingsActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".ui.screenRegistration.RegisterActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".ui.screenDashboard.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Theme.WorkoutMapCompose">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>